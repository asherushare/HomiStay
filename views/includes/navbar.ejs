<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    height: 38px;
    display: flex;
    align-items: center;
    padding: 0 15px;
    border-radius: 25px;
    border: none;
    transition: background-color 0.3s; /* Smooth background transition */
  }

  .search-btn:hover {
    background-color: #d93d4a; /* Slightly darker on hover */
  }

  .search-btn i {
    margin-right: 5px;
  }

  .navbar-nav {
    display: flex;
    align-items: center;
  }

  .form-control {
    height: 38px;
  }

  .navbar-brand i {
    font-size: 24px;
    color: #fe424d;
    margin-right: 10px;
  }

  .nav-link {
    margin-left: 15px;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1.5rem; /* Adjusted padding for smaller screens */
  }

  /* Media queries for responsive adjustments */
  @media (max-width: 768px) {
    .search-inp {
      width: 100%; /* Full width on smaller screens */
      margin-bottom: 10px; /* Space between input and button */
    }

    .navbar-nav {
      flex-direction: column; /* Stack nav items vertically */
      width: 100%; /* Full width */
      align-items: flex-start; /* Align to the start */
    }

    .navbar-nav .nav-link {
      margin-left: 0; /* Remove left margin for stacked items */
      margin-bottom: 5px; /* Space between stacked items */
    }

    .navbar-toggler {
      margin-left: auto; /* Right-align the toggler */
    }
  }
</style>


<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button" 
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
        <input class="form-control me-2 search-inp" type="search" placeholder="Search destination" aria-label="Search">
        <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i> Search</button>
      </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
        <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>

        <% if(currUser) { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>