<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    height: 38px;
    display: flex;
    align-items: center;
    padding: 0 15px;
    border-radius: 25px;
    border: none;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    margin-right: 5px;
  }

  .navbar-nav {
    display: flex;
    align-items: center;
  }

  .form-control {
    height: 38px;
  }

  .navbar-brand i {
    font-size: 24px;
    color: #fe424d;
    margin-right: 10px;
  }

  .nav-link {
    margin-left: 15px;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
  }

  /* Responsive Styles */
  @media (max-width: 768px) {
    .navbar-nav {
      flex-direction: column;
      width: 100%;
      padding: 10px 0;
    }

    .navbar-nav .nav-link {
      margin: 5px 0;
    }

    .search-inp {
      width: 100%;
      margin-bottom: 10px;
    }

    .search-btn {
      width: 100%;
    }
  }

  /* Main Content Shift */
  .main-content.active {
    margin-top: 60px; /* Adjust this value based on your navbar height */
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input class="form-control me-2 search-inp" type="search" placeholder="Search destination" aria-label="Search">
          <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i> Search</button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>

        <% if(currUser) { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<script>
  // JavaScript to handle the navbar toggle and main content adjustment
  const navbarToggle = document.querySelector('.navbar-toggler');
  const mainContent = document.getElementById('main-content'); // Make sure to have an ID on your main content

  navbarToggle.addEventListener('click', () => {
      mainContent.classList.toggle('active');
  });
</script>


